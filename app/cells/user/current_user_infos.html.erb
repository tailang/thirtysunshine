<div class="box">
  <div class="img_username">
    <div class="media">
      <div class="pull-left">
        <%= link_to image_tag(@user.avatar_url(:normal), :class => "img-rounded media-object"), user_path(@user) %>
      </div>
      <div class="media-body">
        <div class="media-heading">
          <%= link_to @user.username, user_path(@user) %>
        </div>
      </div>
    </div>
  </div>

  <div class="state_box">
    <div class="state">
      <%= link_to raw("#{@user.topics.count}<br>话题"), topics_user_path(@user) %>
    </div>
    <div class="state">
      <div id="user_state_comments_count"><%=link_to raw("#{@user.comments.count}<br>回应"), comments_user_path(@user) %></div>
    </div>
    <div class="state">
      <div id="user_state_follow_topics_count"><%= link_to raw("#{@user.follow_count}<br>收藏"), follows_user_path(@user) %></div>
    </div>
  </div>

  <%= link_to "创建话题", new_topic_path, :class => "btn btn-success" %>

</div>

