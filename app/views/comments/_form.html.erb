<% @comment ||= @topic.comments.build %>
<div id="new_comment">
  <%= form_for([@comment.commentable, @comment], :remote => true) do |f| %>
  <div class="field">
	<div>
		<%= f.label :comment, "添加回应"%>
	</div>
	<%= f.kindeditor :comment, :height => 120, :items => ['image','link','baidumap','emoticons','flash','code'],:width => 671, :allowImageUpload => false, :allowFlashUpload => false, :editor_id => 'comment_editor' %>
   </div><br>
   <div class="action">
	 <%= f.submit "提交", :class => "btn btn-primary" %>
	 <div class="pull-right">
	   <a href="/help", target="_blank">编辑器语法帮助/如何上传图片?</a>
	  </div>
   </div> 
  <% end %>
</div>
