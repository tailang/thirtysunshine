<% @comment ||= @topic.comments.build %>
<div id="new_comment">
  <%= form_for([@comment.commentable, @comment], :remote => true) do |f| %>
  <div class="field">
	<div>
	  <%= f.label :comment, "添加回应" %>
	  <%= link_to '图片', '#new_comment', :class => 'insertpicture picture_link label label-info' %>
	</div>
	<%= f.text_area :comment, :style => "height:100px; width:660px" %>
   </div><br>
   <div class="action">
	 <%= f.submit "提交", :class => "btn btn-primary" %>
	 <div class="pull-right">
	   <a href="/help", target="_blank">编辑器语法帮助/如何上传图片?</a>
	  </div>
   </div> 
  <% end %>
</div>