
<div class="comment_line">
<div class="media">
  <div class="pull-left">
    <%= link_to image_tag(comment.user.avatar_url(:normal),:class => "img-rounded media-object"), user_path(comment.user) %>
  </div>
  <div class="media-body">
    <div class="media-heading">
      <div class="comment_infos">
        <%= link_to comment.user.username, user_path(comment.user), :id => "user_name" %>  
        <%= time_ago_in_words(comment.created_at) %>
        <div class="pull-right">
          <%= link_to raw('<span><i class="icon-pencil"></i>修改</span>'), edit_topic_comment_path(comment.commentable,comment)  %>
          <%= link_to raw('<span><i class="icon-remove"></i>删除</span>'),  topic_comment_path(comment.commentable, comment),
                                                                          :method => :delete,
                                                                          :confirm => "确定删除该评论?" %>
          <span><i class="icon-star-empty"></i>收藏</span>
          <span><i class="icon-star"></i>取消收藏</span>
          <span><i class="icon-comment"></i>回复</span>
        </div>
      </div>
    </div>
    <div class="media">
      <div class="content_doc">
        <%= markdown comment.comment %>
      </div>
    </div>
  </div>
</div>
</div>