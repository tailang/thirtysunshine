 <%= provide(:title, "注册") %>
 <div class="row">
   <div class="span9">
     <div class="box">
       <span class="box_header">注册</span>
       <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
       <%= render 'shared/error_messages', object: f.object %>
       <div class="control-group">
         <div class="control-label"><%= f.label :username, "用户名" %></div>
         <div class="controls">
           <%= f.text_field :username, autofocus: true %>
          <span>不能包含@, 横线, 斜线, 句点或空格</span> 
         </div>
       </div>

       <div class="control-group">
         <div class="control-label"><%= f.label :email, "邮箱" %></div>
         <div class="controls">
         <%= f.email_field :email %>
           <span>请输入常用的邮箱，注册后需要验证</span>
         </div>
       </div>

       <div class="control-group">
         <div class="control-label"><%= f.label :password, "密码" %></div>
           <div class="controls">
             <%= f.password_field :password %>
             <span>不少于6个字符</span>
           </div>
       </div>

       <div class="control-group">
         <div class="control-label"><%= f.label :password_confirmation, "再次输入密码" %></div>
         <div class="controls"><%= f.password_field :password_confirmation %></div>
         </div>

       <div class="control-group">
         <div class="controls">
         <%= f.submit "注册", :class => "btn" %>
       </div>
       </div>
    <% end %>
  </div>
</div>

<div class="span3">
  <div class="box">
    <div class="box_header"><p>如果您已有帐号</p></div>
    <%= render "devise/shared/links" %>
  </div>
</div>

</div>




