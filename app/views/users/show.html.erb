<%= provide(:title, @user.username) %>
<div class="row">
    <div class="span9">
    <div class="box">
      <div class="img_username_home_page">
				<div class="media">
					<div class="pull-left">
						<%= image_tag(@user.avatar_url(:large), :class => "img-rounded media-object") %>
					</div>
					<div class="media-body">
						<div class="media-heading">
							<%= @user.username %>
						</div>
						<div class="media">
							<div class="user_id">第<%= @user.id %>位会员
                于<%= time_format @user.created_at %>加入
								<% if @user.role == "admin" or @user.role == "root" %>
									<span class="label">管理员</span>
								 <% end %>
							</div>
						</div>
					</div>
				</div>
      </div>

      <ul class="user_imformations">
        <li class="user_imformation">性别:
         <% if @user.gender == true %>
         女
         <% else %>
         男
         <% end %>
       </li>

       <li class="user_imformation">
        <% unless @user.province.blank? or @user.city.blank?  %>
        所在地: <%= @user.province %>.<%= @user.city %>
        <% else %>
        所在地: 未设置
        <% end %>
      </li>

      <li class="user_imformation">
        <% unless @user.school.blank?%>
        学校: <%= @user.school %>
        <% else %>
        学校: 未设置
        <% end -%>
      </li>

      <li class="user_imformation">
        <% unless @user.douban.blank?%>
        豆瓣: <%= link_to @user.douban, "#{@user.douban}", :target => "_blank" %>
        <% else %>
        豆瓣: 未设置
        <% end -%>
      </li>

      <li class="user_imformation">
        <% unless @user.sinaweibo.blank?%>
        微博: <%= link_to @user.sinaweibo, "#{@user.sinaweibo}", :target => "_blank" %>
        <% else %>
        微博: 未设置
        <% end -%>
      </li>

      <li class="user_imformation">
        <% unless @user.site.blank?%>
        个人博客: <%= link_to @user.site, "#{@user.site}", :target => "_blank" %>
        <% else %>
        个人博客: 未设置
        <% end -%>
      </li>

      <li class="user_imformation">
      <% unless @user.description.blank? %>
        简单介绍: <%= output_content @user.description %>
      <% else %>
        简单介绍: 这个用户有点懒～
      <% end %>
      </li>
    </ul>  
    </div> 
    <div class="box">
      <div class="box_header"><span>最近发布的话题</span></div>
      <%= render_cell :user, :current_topics, :user => @user %>      
    </div>
    <div class="box">
      <div class="box_header"><span>最近回应的话题</span></div>
      <%= render_cell :user, :current_comments, :user => @user %>
    </div>
    <div class="box">
      <div class="box_header"><span>最近收藏的话题</span></div>
      <%= render_cell :user, :follow_topics, :user => @user %>
    </div>
  </div>
  <div class="span3">
    <div class="box">
      <div class="tabbable tabs-right">
        <ul class="nav nav-tabs">
          <li class="active"><%= link_to "个人信息", user_path(@user) %></li>
          <li><%= link_to "发布话题", topics_user_path(@user) %></li>
          <li><%= link_to "回应话题", comments_user_path(@user) %></li>
          <li><%= link_to "收藏收藏", follows_user_path(@user) %></li>
        </ul>
      </div>
    </div>
    <div>
      <%= render_cell :user, :douban, :user => @user%>
    </div>
  </div>
</div>
