  	   <%= link_to raw('<span><i class="icon-remove"></i>删除</span>'), topic_path(@topic),
                                                                       :method => :delete,
                                                                       :confirm => "确定删除吗？" if can? :destroy, @topic %>
        <% if user_signed_in? %>
          <% if current_user.following?(@topic) %>
            <%= link_to raw('<span><i class="icon-star"></i>取消收藏</span>'), [@topic, :follow], :method => :delete %>
            <% else %>
            <%= link_to raw('<span><i class="icon-star-empty"></i>收藏</span>'), [@topic, :follow], :method => :post %>
          <% end %>
        <% end %>
  	   
  	   
      </div>
    </div>

</div>
<% unless @topic.comments.empty?%>
	<div class="box">
    <%= render :partial => 'comments/comment', :locals => { :comments => @comments } %>
  <%= will_paginate @comments, :previous_label => '<前页', :next_label => '后页>' %>
 </div>
<% end %>

 <div class="box">
  <% if user_signed_in? %>
    <%= render "comments/form" %>
