<%= provide(:title, @topic.title) %>
<div class="row">
  <div class="span9">
    <div class="box">
      <div class="media">
        <div class="pull-right">
          <%= link_to image_tag(@topic.user.avatar_url(:normal), :class => "img-rounded media-object"), user_path(@topic.user) %>
        </div>
      <div class="topic_infos">
        <div class="media-body">
          <div class="media-heading">
            <div class="topic_title break_word">
              <%= @topic.title %>
            </div>           
          </div>

          <div class="media">
          <div class="topic_infos_no_title">
          <span><i class="icon-tag"></i><%= link_to @topic.node.name, node_path(@topic.node) %></span>
          <span>本帖由-<%= link_to @topic.user.username, user_path(@topic.user) %>-于<%= time_ago_in_words(@topic.created_at) %>发布</span>
          </div>
        </div>

        </div>
      </div>
      </div>

  <div class="content_doc">
    <%= output_content @topic.body %>
  </div>
  
  
  
