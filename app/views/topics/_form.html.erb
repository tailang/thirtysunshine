<%= form_for(@topic, :html => {:class => "form-horizontal"}) do |f| %>
<%= render "shared/error_messages", :object => f.object %>
<div class="control-group">
  <div class="control-label">选择话题标签</div>
  <div class="controls">
    <%= collection_select :topic, :node_id, Node.all,
    :id,:name, :prompt => "请选择话题标签" %>
  </div>
</div>

<div class="control-group">
  <div class="control-label"><%= f.label :title, "标题" %></div>
  <div class="controls"><%= f.text_field :title, :style => "width:480px;" %></div>
</div>

<div id="new_comment">
  <%= f.label :body, "话题内容" %>
	<%= f.kindeditor :body, :height => 500, :width => 671, :items => ['formatblock','insertorderedlist','insertunorderedlist','image','link','flash','preview'], :allowFlashUpload => false, :allowImageUpload => true, :cssData => 'body{font-size: 14px;}' %>
</div><br>
<div class="action">
  <%= f.submit "发布", :class => "btn btn-success" %>
  <div class="pull-right">
    <a href="/help", target="_blank">编辑器语法帮助/如何上传图片?</a>
  </div> 
</div>

<% end %>
