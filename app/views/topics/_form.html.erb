<%= form_for(@topic, :html => {:class => "form-horizontal"}) do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
 <div class="control-group">
 	<div class="control-label">选择话题标签</div>
 	<div class="controls">
 	  <%= collection_select :topic, :node_id, Node.all,
                      :id,:name, :prompt => "请选择话题标签" %>
 	</div>
</div>

<div class="control-group">
  <div class="control-label"><%= f.label :title, "标题" %></div>
  <div class="controls"><%= f.text_field :title, :style => "width:480px;" %></div>
</div>
 
   <div class=field>
      <%= f.label :body, "话题内容" %>
      <a href="http://weibotuchuang.sinaapp.com/", target="_blank", class="picture_link label label-info">图片</a>
      <%= f.text_area :body, :style => "height:500px; width:660px" %>
   </div><br>
    <div class="action">
      <%= f.submit "发布", :class => "btn btn-primary" %>
        <div class="pull-right">
    <a href="#">编辑器语法帮助?</a>
  </div> 
    </div>
  
<% end %>