<%= provide(:title, "社区") %>
<div class="row">
  <div class="span9">
    <div class="box">
        <div id="node_info">
          <% @nodes.each do |node| %>
          <%= link_to node.name, node %>
          <% end -%>
          <%= link_to "所有话题", topics_path %>
        </div>
        
        
        <% @topics.each do |topic| %>
        <div class="topic_line">
        <div class="media">
          <div class="pull-left">
           <%= link_to image_tag(topic.user.avatar_url(:normal), :class => "img-rounded media-object"), user_path(topic.user) %>
          </div>
          <div class="media-body">
            <div class="media-heading">
              <div id="topics_title">
              <%= link_to topic.title, topic_path(topic) %>
              </div>
            </div>
            <div class="media">
              节点：<%= link_to topic.node.name, node_path(topic.node) %>
              作者：<%= link_to topic.user.username, user_path(topic.user) %>
              发布时间:<%= time_ago_in_words(topic.created_at) %><br>
            </div>
          </div>
        </div>
      </div>
        <% end -%>
        
      </div>
      </div>
  </div>
</div>


