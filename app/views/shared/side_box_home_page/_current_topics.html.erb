   <% topics.each do |topic| %>
   <div class="topic_line">
   <div id="topics_title">
   	 <div class="label current_topic_node"><%= link_to topic.node.name, node_path(topic.node) %></div>
     <div class="pull-right"><span><%= time_ago_in_words topic.created_at %></span>
   	 <div class="label label-info"><%= topic.comments.count %></div>
     </div>
     <%= link_to topic.title, topic_path(topic) %>
   </div>
   </div>
   <% end -%>